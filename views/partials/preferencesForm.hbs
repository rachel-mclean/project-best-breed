<form action="/preferences" method="GET" id="preferences-form">
  <div class="centered-text">
    <h2 style="color: rgb(250, 250, 186)">My best breed is ...</h2>
  </div>
  <div class="row">
        <br>
        <div class="column">
          <div class="form-group">
              <div class="col-sm-12 col-md-32 col-lg-22">
                  <i class="fa fa-search fa-2x float-xs-left searchicon"></i><input type="search" class="form-control" id="search" placeholder="Filter items...">
              </div>
          </div>
        </div>
        <div class="column">
          <button type="submit">Submit</button>
        </div>
    </div>
  </div>
  <div class="form-group">
    <div class="items-collection">

      {{#each temperaments}}
      <div class="items col-xs-6 col-sm-1 col-md-3 col-lg-2">
        <div class="info-block block-info clearfix">
          <div data-toggle="buttons" class="btn-group bizmoduleselect">
            <label class="btn btn-secondary">
              <div class="itemcontent">
                <input type="checkbox" name="temperaments[]" autocomplete="off" value="{{this}}">
                <span class="fa fa-car fa-2x"></span>
                {{this}}
              </div>
            </label>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
  </div>
  {{!-- <button type="submit">Submit</button> --}}
</form>



<style>
#search {
    width:90%;
}
body {
    background-color:rgb(167, 236, 221)
}
.btn {
    width: 150px;
    height: 50px;
    margin-right: 5px;
    border-radius: 4px;

}
.col-sm-12.col-md-32.col-lg-22 {
    padding-bottom: 5px;
}
.row {
    background-color: rgb(250, 250, 186);
}
.col-lg-2 {
    padding-right: 0;
    padding-left: 0;
}

.items.col-xs-6.col-sm-1.col-md-3.col-lg-2 {
    width: 100px;
    margin-top: 10px;
    margin-left: 3px;
    margin-right: 3px;
    box-shadow: 2px 4px 25px rgb(230, 230, 222);
}
.btn.active {
    background-color: rgb(250, 250, 186);
    color: black;
}

.searchicon {
    color:#5CB85C;
}

.items-collection{
    margin:20px 0 0 0;

}
.items-collection label.btn-default.active{
    background-color:#007ba7;
    color:#FFF;
}
.items-collection label.btn-default{
    width:90%;
    border:1px solid #305891;
    margin:5px;
    border-radius: 17px;
    color: #305891;

}
.items-collection label .itemcontent{
    width:110%;
}
.items-collection .btn-group{
    width:95%
}
.doggydex {
    display: block;
  margin-left: auto;
  margin-right: auto;
}
h5 {
    font-family: Comic Sans MS, Comic Sans, cursive;
    font-size: 13px;
}
.container {
    background-color: rgba(96, 218, 248, 0.753);
    border-radius: 5px;

}

  h2 {
    font-family: Comic Sans MS, Comic Sans, cursive;
	font-variant: small-caps;

}
.column {
  float: left;
  width: 50%;
  padding: 5px;
}

/* Clear floats after image containers */
.row2::after {
  content: "";
  clear: both;
  display: table;
}
</style>

<script>
$(function () {
    $('#search').on('keyup', function () {
        var pattern = $(this).val();
        $('.items-collection .items').hide();
        $('.items-collection .items').filter(function () {
            return $(this).text().match(new RegExp(pattern, 'i'));
        }).show();
    });
});
</script>
